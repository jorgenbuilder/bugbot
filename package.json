{
  "name": "bugbot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "gateway",
    "consumer",
    "shared"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "setup:secrets": "./scripts/setup-secrets.sh",
    "dev:gateway": "wrangler dev --config gateway/wrangler.toml",
    "dev:consumer": "wrangler dev --config consumer/wrangler.toml",
    "deploy:gateway": "wrangler deploy --config gateway/wrangler.toml",
    "deploy:consumer": "wrangler deploy --config consumer/wrangler.toml",
    "deploy:all": "npm run deploy:gateway && npm run deploy:consumer",
    "logs:gateway": "wrangler tail --config gateway/wrangler.toml",
    "logs:consumer": "wrangler tail --config consumer/wrangler.toml",
    "build:container": "cd container && docker build -t bugbot-executor ."
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.1"
  }
}
